<div class="row">
<div class="col-md-5 col-md-offset-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend>Sign up</legend>
    <div class="form-group">
    <%= f.label :email, class: "col-lg-3 control-label" %>      
      <div class="col-lg-10">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Email' %>       
      </div>
    </div>

    <div class="form-group">
    <%= f.label :password, class: "col-lg-3 control-label" %>       
      <div class="col-lg-10">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'Password' %> 
      </div>      
    </div>
<div class="col-lg-10"
    <% if @minimum_password_length %>
    <span class="help-block">(<%= @minimum_password_length %> characters minimum)</span>
    <% end %>
    </div>

     <div class="form-group">
    <%= f.label :password_confirmation, class: "col-lg-3 control-label" %>    
      <div class="col-lg-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: 'Repeat password' %> 
      </div>
    </div>    
    <div class="form-group">
      <div class="col-lg-10">
      <%= f.submit "Sign up", class: "btn btn-default btn-lg btn-block" %>              
        <%= render "devise/shared/links" %>
      </div>      
    </div>

  </fieldset>
  <% end %>
  </div>
  </div>

