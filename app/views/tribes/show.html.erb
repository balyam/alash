<!---Start Tribes to show -->
<div class="row">
    <div class="col-md-2">
        <ul class="nav nav-pills">
            <li class="active">     
                <%= link_to @tribe.union.name, @tribe.union %>
                <span class="badge"></span>
            </li>
        </ul>
    </div>
</div>
<div class="row">           
    <div class="col-md-11 col-md-offset-1">                
        <% @tribe.union.tribes.order(:name).each do |t| %>
          <div class="col-lg-2">                      
              <div class="bs-component">
                  <div class="list-group">                              
                      <%= link_to(t, class: "list-group-item #{active_page(t)}") do %>
                          <h5 class="list-group-item-heading text-center"><%= t.name %> </h5>
                        <% end %>
                    </div> 
                </div>
            </div>                
          <% end %>
      </div>
  </div>

  <!--- End of Tribes show-->
  <div class="row">
      <div class="col-md-8">
          <div class="panel panel-default">
              <div class="panel-heading"><%= @tribe.name %></div>
              <div class="panel-body"> <%= simple_format(@tribe.text) %><br></div>
          </div>
          <div class="panel panel-default">
              <div class="panel-body">
                  <%= link_to 'Edit', edit_tribe_path, class: "btn btn-info" %> 
                    <%= link_to "Delete", tribe_path, method: :delete, class: "btn btn-danger" %>
                  </div>
              </div>
          </div>
          <div class="col-md-4">
              <div class="list-group">
                  <% @tribe.clans.order(:name).each do |t| %>
                    <%= link_to(t.name, t, class: "list-group-item" ) %>                          
                    <% end %>                      
                </div>
            </div>
        </div>
