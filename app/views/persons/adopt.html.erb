<section id="content">
	<div class="container">
            <div class="col-md-12">
                <div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Add yourself</h3>
  </div>
  <div class="panel-body">
      
      <div class="row">  
          <%= form_for @adoptperson, url: {action: "adopt_new"}, html: {class: "form-horizontal"} do |p| %>
       <div class="form-group">
        <label for="select" class="control-label">Choose Father</label>
          <div class="col-lg-4">
          <%= collection_select(:person, :father, @persons,:id, :name, {prompt: "Select ancestor"}, {class: "form-control"})  %>
                         
          </div>
       </div>
  
      <div class="form-group">
      <label for="select" class="control-label">Choose Son</label>
      <div class="col-lg-4">
          <%= collection_select(:person, :seed, @orphans,:id, :name, {prompt: "Select son"}, {class: "form-control"})  %>
                         
      </div>
    </div>
          <%= link_to "Test this button", adopt_new_persons_path, class: "btn btn-info" %>          
          <%= p.submit "Adopt this Person", class: "btn btn-primary" %>
      </div>
      <% end %>
      </div>
</div>
            </div>
            
            <!---Start Orphans show--->
            <div class="row">
                <% @persons.each do |t| %>
                           
           <%= link_to(t) do%>  <span class="label label-info"><%= t.name %> </span> 
           <% end %>
                       
                <% end %>
                                               
            </div>
            <!---End of Tribes show--> 
        	<!-- divider -->
                
		<div class="row">
			<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Column heading</th>
      <th>Column heading</th>
      <th>Column heading</th>
    </tr>
  </thead>
  <tbody>
      <% @persons.seeds.each_with_rel do |n,r| %>
    <tr>
      <td>1</td>
      <td><%= r.from_node[:name] %></td>
      <td><%= r.to_node[:name] %> </td>
      <td>Column content</td>
    </tr>
    <% end %>
    </tbody>
</table> 
		</div>
		<!-- end divider -->
				
	</div>
	</section>