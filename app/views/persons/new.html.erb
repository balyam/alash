<%= render 'layouts/shared/update.js' %> 
<div class="container">   
    <legend>Add Person</legend>
    <%= form_for @person, url: {action: "create"}, html: {class: "form-horizontal"} do |p| %>
        <div class="form-group">
            <label for="select" class="col-lg-2 control-label">Choose Union</label>
            <div class="col-lg-4">
                <%= collection_select(:union,:id, @unions,:id, :name, {prompt: "Select Union"}, { class: "form-control", id: 'unions_select' })  %>

              </div>
          </div>
          <div class="form-group">
              <label for="select" class="col-lg-2 control-label">Choose Tribe</label>
              <div class="col-lg-4">
                  <%= collection_select(:tribe, :id , @tribes, :id, :name, {prompt: "Select Tribe"}, {class: "form-control", id: 'tribes_select'})  %>

                </div>
            </div>

            <div class="form-group">
                <label for="select" class="col-lg-2 control-label">Choose Clan</label>
                <div class="col-lg-4">
                    <%= p.collection_select(:myclan, @clans, :id, :name, {prompt: "Select Clan"}, {class: "form-control", id: 'clans_select'})  %>

                  </div>
              </div>

              <div class="form-group">

                  <label class="col-lg-2 control-label">Name of Person</label>
                  <div class="col-lg-4">
                      <%= p.text_field :name , class: "form-control" %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="textArea" class="col-lg-2 control-label">Description</label>
                    <div class="col-lg-10">
                        <%= p.text_area :text, class: "form-control" %>
                      </div>
                  </div>

                  <div class="form-group">
                      <div class="col-lg-10 col-lg-offset-2">
                          <%= link_to "Cancel", :back, class: "btn btn-default" %>
                            <%= p.submit "Create", class: "btn btn-primary" %>
                          </div>
                      </div>
                    <% end %>
                </div>
