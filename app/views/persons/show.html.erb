<section id="content">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-default">
  <div class="panel-heading"><%= @person.name %></div>
  <div class="panel-body">
<%= @person.text %><br>

  </div>
</div>
                             <div class="panel panel-default">
  <div class="panel-body">
   
            <%= link_to 'Edit', edit_person_path, class: "btn btn-info" %> 
<%= link_to "Delete", person_path, method: :delete, class: "btn btn-danger" %>
  </div>
</div>

                        </div>
                    <!-- divider -->
                
		<div class="row">
			<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Father</th>
      <th>Son</th>
      <th>Son ID</th>
    </tr>
  </thead>
  <tbody>
      <% @person.seeds.each_rel do |r| %>
    <tr>
      <td>1</td>
      <td><%= r.from_node[:name] %></td>
      <td><%= link_to(r.to_node[:name], r.to_node) %> </td>
      <td><%= r.to_node[:uuid] %> </td>
    </tr>
    <% end %>
    </tbody>
</table> 
		</div>
		<!-- end divider -->
                </div>
           


			
                    </div>
</section>
