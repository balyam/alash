<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Add new Clan</h3>
                    </div>
                    <div class="panel-body">
                        <%= link_to "New Clan", new_clan_path, class: "btn btn-primary" %>
                      </div>
                </div>
              </div>
          </div>

          <!---Start Clans show--->
          <div class="row">
              <% @clans.each do |t| %>
                <div class="col-lg-4">
                    <div class="bs-component">
                        <div class="list-group">
                            <%= link_to(t, class: "list-group-item" ) do %>

                                <h4 class="list-group-item-heading"><%= t.name %> </h4>
                                <p class="list-group-item-text">Within: <%= t.tribe.name %> </p>

                              <% end %>
                          </div> 
                      </div> 
                  </div>
                <% end %>

            </div>
            <!---End of Clans show--> 
            <!-- divider -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="solidline">
                    </div>
                </div>
            </div>
            <!-- end divider -->

        </div>
    </section>