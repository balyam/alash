<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Add new Clan</h3>
            </div>
            <div class="panel-body">
                <%= link_to "New Clan", new_clan_path, class: "btn btn-primary" %>
              </div>
          </div>
      </div>
  </div>          
  <div class="row">  
      <% @clans.tribe.each_with_rel do |clan, rel| %>
        <div class="col-lg-4">
            <div class="bs-component">
                <div class="list-group">
                    <%= link_to(clan, class: "list-group-item" ) do %>
                        <h4 class="list-group-item-heading"><%= rel.from_node.name %> </h4>
                        <p class="list-group-item-text">Within: <%= clan.name %> </p>
                      <% end %>
                  </div> 
              </div> 
          </div>
        <% end %>
        <% @clans.each do |c| %>
        <% unless c.tribe %>
<div class="col-lg-4">
            <div class="bs-component">
                <div class="list-group">
                    <%= link_to(c, class: "list-group-item" ) do %>
                        <h4 class="list-group-item-heading"><%= c.name %> </h4>                       
                      <% end %>
                  </div> 
              </div> 
          </div>
          <% end %>
<% end %>

    </div>           
    <!-- divider -->
    <div class="row">
        <div class="col-lg-12">
            <div class="solidline">
            </div>
        </div>
    </div>
    <!-- end divider -->