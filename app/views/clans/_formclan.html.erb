<% if @clan.errors.any? %>
  <div id="error_explanation">
      <h2><%= pluralize(@clan.errors.count, "error") %> prohibited this clan from being saved:</h2>
      <ul>
          <% @clan.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
  </div>
<% end %>

<legend>Add Clan</legend>
<%= form_for @clan, url: {action: "create"}, html: {class: "form-horizontal"} do |c| %>


    <div class="form-group">
        <label for="select" class="col-lg-2 control-label">Choose Union</label>
        <div class="col-lg-4">
            <%= collection_select(nil, :union, @unions,:id, :name, {prompt: "Select category", required: true}, {class: "form-control", id: "unions_select"})  %>

          </div>
      </div>
      <div class="form-group">
          <label for="select" class="col-lg-2 control-label">Choose Tribe</label>
          <div class="col-lg-4">
              <%= c.collection_select(:tribe, @tribes ,:id, :name, {prompt: "Select Tribe"}, {class: "form-control", id: "tribes_select"})  %>

            </div>
        </div>

        <div class="form-group">        	
            <label class="col-lg-2 control-label">Title of Clan</label>
            <div class="col-lg-4">
                <%= c.text_field :name , required: true, class: "form-control" %>
              </div>
          </div>
          <div class="form-group">        	
              <label class="col-lg-2 control-label">Казақша</label>
              <div class="col-lg-4">
                  <%= c.text_field :translitname , class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <label for="textArea" class="col-lg-2 control-label">Description</label>
                <div class="col-lg-10">
                    <%= c.text_area :text, :class => "form-control" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <%= link_to "Cancel", clans_path, class: "btn btn-default" %>
                      <%= c.submit "Create", :class => "btn btn-primary" %>
                  </div>
              </div>
            <% end %>