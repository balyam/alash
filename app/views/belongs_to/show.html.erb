
<!-- divider -->                
<div class="row">
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Person</th>
                <th>Clan</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            <% @person.myclan.each_rel do |r| %>
              <tr>
                  <td>1</td>
                  <td><%= r.from_node[:name] %></td>
                  <td><%= r.to_node[:name] %> </td>
                  <td><%= link_to("delete",person_belongs_to_path(r.from_node.id, r), method: :delete) %> </td>
              </tr>
            <% end %>
        </tbody>
    </table> 
</div>
<!-- end divider -->