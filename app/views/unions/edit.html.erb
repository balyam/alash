<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Editing Unions</h3>
  </div>
    <div class="container">
        
  
    <legend>Legend</legend>
    <%= form_for @union, url: {action: "update"}, html: {class: "form-horizontal"} do |f| %>
    
    <div class="form-group">
        	
      <label class="col-lg-2 control-label">Title of JUZ</label>
      <div class="col-lg-4">
          <%= f.text_field :name , class: "form-control" %>
      
      </div>
    </div>
       <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Description</label>
      <div class="col-lg-10">
          <%= f.text_area :describe, class: "form-control" %>
        
        
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to "Cancel", union_path, class: "btn btn-default" %>
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
    </div>
  
</div>
